<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <input type="hidden" name="gameNumber" value="<%= gameNumber %>">
    <h1>Tower Defense</h1>
    <p>Leeroyyy Jenkinnnns!</p>

    <div class="gameFrame">

      <div class="gameState">
        <span class="remainingCredits"></span>
        <span class="remainingLives"></span>
        <span class="currentWave"></span>
      </div>
      <div class="gameMenu">
        <button id="pause" type="button" name="pause-button">Pause</button>
        <button id="resume" type="button" name="resume-button">Continue</button>
        <button class="place-tower" type="button" data-towertype="Cannon" name="place-tower-button">Place Cannon</button>
        <button class="place-tower" type="button" data-towertype="Flamethrower" name="place-tower-button">Place Flamethrower</button>
        <button class="place-tower" type="button" data-towertype="MachineGun" name="place-tower-button">Place Machine Gun</button>
        <button class="place-tower" type="button" data-towertype="PlasmaBattery" name="place-tower-button">Place Plasma Battery</button>
        <button id="spawn-wave" type="button" name="spawn-wave-button">Spawn Wave</button>
      </div>
      <button id="new-game" type="button" name="new-game-button">New Game</button>

      <div class="game-display">
        <div id="display-box"></div>
        <div id="info-box">
          <div id="info-panel" class="info-panel">
            <div id="info-panel-name" class="info-panel-header"></div>
            <div id="info-panel-data" class="info-panel-data"></div>
          </div>

          <div id="tower-actions" class="tower-actions">
            <div class="option upgrade" data-upgrade="generic">
              <span class="upgrade-cost"></span>
              <img src="/images/upgrade01.png" alt="">
            </div>
            <div class="option upgrade" data-upgrade="generic">
              <span class="upgrade-cost"></span>
              <img src="/images/upgrade02.png" alt="">
            </div>
            <div class="option upgrade" data-upgrade="damage">
              <span class="upgrade-cost"></span>
              <img src="/images/damage.png" alt="">
            </div>
            <div class="option upgrade" data-upgrade="accuracy">
              <span class="upgrade-cost"></span>
              <img class="option accuracy" src="/images/accuracy.png" alt="">
            </div>
            <div class="option upgrade" data-upgrade="rotation-speed">
              <span class="upgrade-cost"></span>
              <img class="option rotation_speed" src="/images/rotation_speed.png" alt="">
            </div>
            <div class="option sell" data-upgrade="sell">
              <span class="income"></span>
              <img src="/images/sell.png" alt="">
            </div>
          </div>
        </div>
      </div>

      <script type="text/javascript" src="/javascripts/socket.io.js"></script>
      <script type="text/javascript">
        var socket = io();
      </script>
      <script type="text/javascript" src="/javascripts/index.js"></script>
    </div>
  </body>
</html>
